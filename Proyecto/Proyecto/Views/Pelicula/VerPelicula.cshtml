@model IEnumerable<Proyecto.Models.Pelicula>

@{
    ViewBag.Title = "Ver Pelicula";
}

@section Content{
    <link href="@Url.Content("~/Content/Pelicula.css")" rel="stylesheet" type="text/css" />
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index","Home")"><span><img src="~/Content/GuaflixLG.png" height="30" /></span></a>
        </div>


        <div class="btn-group" style="float:right; margin-right:25px; background-color:transparent; margin-top:15px; color:white">
            <button type="button" class="btn btn-default dropdown-toggle" style="background-color:transparent; color:deepskyblue; border-color:transparent" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span> @ViewBag.Message
            </button>

            <ul class="dropdown-menu" role="menu" style="right:100%;">
                <li><a href="@Url.Action("MiUsuario","Home")"> Mi Cuenta</a></li>
                <li><a href="@Url.Action("CerrarSesion","Home")">Cerrar Seción</a></li>
            </ul>
        </div>
    </div>
</nav>

<div style="background-color:deepskyblue; height:50px; opacity:0.5; border-radius:8px;"></div>
<br />
<div style="height:400px;">
    <div>
        <p style="float:left; padding-left:10px;">@Html.ActionLink("Regresar a mis Peliculas", "MisPeliculas")</p>
        <p style="float:right">@Html.ActionLink("Eliminar de Mi WatchList", "Edit", new { /* id=item.PrimaryKey */ })</p>
        <p style="color:transparent; float:right">.....</p>
        <p style="float:right">@Html.ActionLink("Agregar a Mi WatchList", "Edit", new { /* id=item.PrimaryKey */ })</p>
    </div>

    @foreach (var item in Model)
    {<br />
        <h2 style="color:white">@Html.DisplayFor(modelItem => item.Nombre)</h2>
        <div style="padding-left:10px;" class="wrapper">
            <img src="@Url.Content(item.URL)" style="width:200px; height:300px; border: 1px solid white; border-radius:5px; float:left; margin: 10px 10px 0 0;" />
            
            @if (item.Nombre == "Stranger Things")
            {
            <div align="center" style="float:right; margin-top:0px; align-content:center; background-color:lightskyblue; opacity:0.6; border-radius: 5px; width:570px; height:325px;">
                <iframe style="padding-top:5px;" width="560" height="315" src="https://www.youtube.com/embed/XWxyRG_tckY" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            </div>
            }else if(item.Nombre == "Riverdale")
            {
            <iframe width="560" height="315" src="https://www.youtube.com/watch?v=HxtLlByaYTc&t=16s" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            }
            <br />
        </div>
        <table>
            <tr><td><h4 style="color:white">Tipo: @Html.DisplayFor(modelItem => item.Tipo)</h4></td></tr>
            <tr><td><h4 style="color:white">Año: @Html.DisplayFor(modelItem => item.AniodeLanzamiento)</h4></td></tr>
            <tr><td><h4 style="color:white">Genero: @Html.DisplayFor(modelItem => item.Genero)</h4></td></tr>
       </table>
        <br />
        



    }
</div>
